#!/bin/bash

set -e

if [[ -n "${JS_DEBUG}" ]]; then
    set -x
fi

function usage() {
    echo -n \
        "Usage: $(basename "$0")

Builds and pulls container images and installs dependencies.
"
}

if [ "${BASH_SOURCE[0]}" = "${0}" ]; then
    if [ "${1:-}" = "--help" ]; then
        usage
    else
        docker-compose build

        # Make sure Postgres is available for connections before running migrations.
        ./bin/init_db

        # Apply any outstanding Django migrations
        docker-compose run --rm django manage.py migrate --no-input
    fi
fi
