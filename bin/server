#!/bin/bash

set -e

if [[ -n "${JS_DEBUG}" ]]; then
    set -x
fi

function usage() {
    echo -n \
         "Usage: $(basename "$0")

Run a development server for the app.
"
}

if [ "${BASH_SOURCE[0]}" = "${0}" ]
then
    if [ "${1:-}" = "--help" ]
    then
        usage
    else
        docker-compose up -d database

        ./bin/init_db

        docker-compose up django frontend
    fi
fi

